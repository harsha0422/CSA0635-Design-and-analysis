#include <stdio.h>
void bubbleSort(int arr[],int n) 
{
    int i,j,temp;
    for (i=0;i<n-1;i++) 
    {
        for (j=0;j<n-i-1;j++) 
        {
            if (arr[j]>arr[j+1]) 
            {
                temp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=temp;
            }
        }
    }
}
int main()
{
    int arr[100],n,i;
    printf("\nEnter the number of elements in the array = ");
    scanf("%d",&n);
    printf("\nEnter %d elements =\n",n);
    for (i=0;i<n;i++) 
    {
        scanf("%d",&arr[i]);
    }
    bubbleSort(arr,n);
    printf("\nArray after sorting = ");
    for (i=0;i<n;i++)
        printf("%d\t",arr[i]);
    printf("\n");
}
